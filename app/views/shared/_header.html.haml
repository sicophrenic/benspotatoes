.navbar.navbar-fixed-top
	.navbar-inner
		.container
			%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			%a.brand{ :href => root_path } Ben's Potatoes
			.nav-collapse
				-if user_signed_in?
					= form_tag movies_path, :method => :get, :class => 'navbar-search pull-left' do
						= text_field_tag 'titlesearch', @title_search, :placeholder => 'Do I Have This Potato?'
				%ul.nav.pull-right
					-if user_signed_in?
						%li
							%a{ :href => search_path } Search
						%li
							%a{ :href => movies_path } Movies
					%li
						%a{ :href => about_path } About
					%li
						%a{ :href => todo_path } Todo
					-if user_signed_in?
						%li
							%a{ :href => destroy_user_session_path } Sign Out
					-else
						%li
							%a{ :href => new_user_session_path } Sign In
