%table#movies.table.table-bordered.table-condensed
	%thead
		%tr
			%th{:class => @title_header}= link_to 'Title',
														movies_path(:sort => 'title',
																				:viewby => @viewby,
																				:ratings => @selected_ratings,
																				:locations => @selected_locations,
																				:qualities => @selected_qualities,
																				:title_search => @title_search,
																				:director_search => @director_search,
																				:start => @start_year,
																				:end => @end_year,
																				:per_page => @per_page)
			%th Director
			%th Rating
			%th Location
			%th Quality
			%th{:class => @release_header}= link_to 'Release Date',
															movies_path(:sort => 'release_date',
																					:viewby => @viewby,
																					:ratings => @selected_ratings,
																					:locations => @selected_locations,
																					:qualities => @selected_qualities,
																					:title_search => @title_search,
																					:director_search => @director_search,
																					:start => @start_year,
																					:end => @end_year,
																					:per_page => @per_page)
	%tbody#movielist
	- @movies.each do |movie|
		%tr
			%td= link_to "#{movie.title}", movie_path(movie)
			%td= movie.director
			%td= movie.rating
			%td= movie.location
			%td{ :id => @hilite }= movie.quality
			%td= movie.release_date.strftime("%F")
			
- if @paginate
	= will_paginate